<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Time</th>
      <th>Channel</th>
      <th>Favourite</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tvshows.each do |tvshow| %>
      <tr>
        <td><%= tvshow.name %></td>
        <td><%= tvshow.time.try(:strftime, "%H:%M") %></td>
        <td><%= tvshow.channel.try(:name) %></td>
      </tr>
    <% end %>
  </tbody>
</table>